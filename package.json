{
  "name": "kira-player",
  "version": "0.1.1",
  "description": "A minimal Electron application",
  "author": "cchealthier",
  "main": "./src/electron.js",
  "scripts": {
    "start:react": "cross-env NODE_ENV=development webpack-dev-server --config pack/webpack.config.js",
    "start:elec": "cross-env NODE_ENV=development electron .",
    "start": "npm run start:react & npm run start:elec",
    "clean": "rm -rf dist build",
    "build:react": "cross-env NODE_ENV=production webpack --config pack/webpack.config.js",
    "prebuild:elec": "node pack/prebuild.js",
    "build:elec": "cross-env NODE_ENV=production electron-builder --mac --arm64",
    "build": "npm run build:react && npm run build:elec",
    "lint": "eslint --ext .jsx,.js src --fix",
    "test": "react-scripts test",
    "eject": "react-scripts eject"
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "npm run lint"
    ]
  },
  "eslintConfig": {
    "extends": "react-app",
    "globals": {
      "NODE_ENV": "readonly",
      "DEV_SONG_PREFIX": "readonly"
    }
  },
  "homepage": "./",
  "build": {
    "productName": "KiraPlayer",
    "copyright": "I say what is what",
    "directories": {
      "output": "dist"
    },
    "appId": "com.KiraPlayer.app",
    "files": [
      "service/*"
    ],
    "mac": {
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "icon": "./build/kira.ico",
      "target": [
        "nsis",
        "zip"
      ]
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "kira"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "@electron/remote": "^2.0.9",
    "@reduxjs/toolkit": "^1.9.5",
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.3.2",
    "@testing-library/user-event": "^7.1.2",
    "glob": "^7.1.6",
    "music-metadata": "^7.13.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-redux": "^8.1.2",
    "react-scripts": "3.3.0",
    "redux": "^4.0.5"
  },
  "devDependencies": {
    "cross-env": "^7.0.2",
    "css-loader": "^6.8.1",
    "electron": "^24.1.2",
    "electron-builder": "^23.6.0",
    "eslint-config-react-app": "^7.0.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-webpack-plugin": "^4.0.1",
    "file-loader": "^6.2.0",
    "fs-extra": "^8.1.0",
    "html-webpack-plugin": "^5.5.3",
    "mini-css-extract-plugin": "^2.7.6",
    "url-loader": "^4.1.1",
    "webpack-cli": "^4.10.0",
    "webpack-dev-server": "^4.11.1"
  }
}
